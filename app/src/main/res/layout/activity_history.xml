<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:weightSum="100" android:background="#000000"
    tools:context="com.eps.udl.bitcoincheckout.HistoryActivity">

    <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="9" android:background="#ff00bfff" android:orientation="horizontal"
        android:gravity="center">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/history_spinner_text" android:textSize="20sp"
            android:textColor="@color/yellow_text"/>

        <Spinner android:id="@+id/history_spinner" android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ListView android:id="@+id/items_list" android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="95"
        android:background="#777777"/>

</LinearLayout>
